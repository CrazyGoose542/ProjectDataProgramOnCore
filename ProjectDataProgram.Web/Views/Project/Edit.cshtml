@using ProjectDataProgram.Service.Dtos
@model ProjectDataProgram.Web.Models.ProjectModl

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактирование</h1>

<h4>Проект</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCompany" class="control-label"></label>
                <input asp-for="CustomerCompany" class="form-control" />
                <span asp-validation-for="CustomerCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorCompany" class="control-label"></label>
                <input asp-for="ContractorCompany" class="form-control" />
                <span asp-validation-for="ContractorCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupervisorUserId" class="control-label"></label>
                <select asp-for="SupervisorUserId" class="form-control" asp-items="@Model.SupervisorUserList">
                    <option id="ALL"></option>
                </select>
                <span asp-validation-for="SupervisorUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBegin" class="control-label"></label>
                <input asp-for="DateBegin" class="form-control" />
                <span asp-validation-for="DateBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectUsers" class="control-label"></label>
                <div class="row">
                    <div class="col-8">
                        <p>Наименование</p>
                    </div>
                    <div class="col-1">
                        <p>Свободный</p>
                    </div>
                    <div class="col-1">
                        <p>В БД</p>
                    </div>
                    <div class="col-1">
                        <p>Добавить</p>
                    </div>
                    <div class="col-1">
                        <p>Удалить</p>
                    </div>
                </div>
                @for (int i = 0; i < Model.ProjectUsers.Count; i++)
                {
                    @Html.HiddenFor(model => model.ProjectUsers[i].Id)
                    @Html.HiddenFor(model => model.ProjectUsers[i].FullName)
                    @Html.HiddenFor(model => model.ProjectUsers[i].Status)
                    @Html.HiddenFor(model => model.ProjectUsers[i].Email)
                    <div class="row">
                        <div class="col-8"> @Model.ProjectUsers[i].FullName    @Model.ProjectUsers[i].Email</div>
                        <div class="col-1">
                            @if (Model.ProjectUsers[i].Status == ProjectUserStatus.Free)
                            {
                                <p>+</p>
                            }
                        </div>
                        <div class="col-1">
                            @if (Model.ProjectUsers[i].Status == ProjectUserStatus.Save)
                            {
                                <p>+</p>
                            }
                        </div>
                        <div class="col-1">
                            @if (Model.ProjectUsers[i].Status == ProjectUserStatus.Free)
                            {
                                <input asp-for="@Model.ProjectUsers[i].IsAdd" class="form-control" />
                            }
                        </div>
                        <div class="col-1">
                            @if (Model.ProjectUsers[i].Status == ProjectUserStatus.Save)
                            {
                                <input asp-for="@Model.ProjectUsers[i].IsDelete" class="form-control" />
                            }
                        </div>
                    
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

